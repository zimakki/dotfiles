[user]
	email = zimakki@gmail.com
	name = Zi Makki
[core]
	excludesfile = /Users/zimakki/.gitignore_global

[alias]
	## show me the log in a pretty format
	lg = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative
	## show me the log in a pretty format with the files changed
	lg1 = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative --name-status
	## show me the log in a pretty format with the files changed and the diff
	lg2 = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative -p
	## show me the log in a pretty format with the files changed and the diff and the stat
	lg3 = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative -p --stat
	## show me the log in a pretty format with the files changed and the diff and the stat and the graph
	lg4 = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative -p --stat --graph
	## show me the log in a pretty format with the files changed and the diff and the stat and the graph and the reflog
	lg5 = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset' --abbrev-commit --date=relative -p --stat --graph --reflog
	## show me the log in a pretty format with the files changed and the diff and the stat and the graph and the ref
	##
	## cool config for delta (the diff tool)
[core]
    pager = delta

[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true    # use n and N to move between diff sections
    light = false      # set to true if you're in a terminal w/ a light background color (e.g. the default macOS terminal)
    side-by-side = true
    line-numbers = true
    true-color = always

[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
